/** @hidden */
public class IcgRoot {}

/**
 * <%= diagram_options %>
 * @hidden
 */
class UMLOptions {}

<% @groups.each do |group, entities| %>
  // --------------------------------------------------------------------------------------------------------------------
  // <%= group %>
  <% entities.each do |entity, properties| %>
    <% properties ||= [] %>
    <% if show?(entity) %>
      /**
      <% properties.select { |p| p[0] == '@' }.each do |property| %>
       * <%= property %>
      <% end %>
       * <%= node_fill_color(group) %>
       */
      class <%= entity %> {
        <% properties.reject { |p| p[0] == '@' }.each do |property| %>
          <%= property %>
        <% end %>
      }
    <% end %>
  <% end %>
<% end %>